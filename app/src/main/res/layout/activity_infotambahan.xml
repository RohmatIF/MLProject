<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infotambahan"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0859c6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp"
        app:circularflow_defaultRadius="20dp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="306dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:textStyle="italic"
        android:layout_marginTop="24dp"
        android:text="Info Tambahan"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="265dp"
        android:layout_height="441dp"
        android:layout_marginTop="64dp"
        android:text="Gender:\n0 -> Wanita\n1-> Laki-Laki\n2 -> Lainnya\n\nHypertension:\n0 -> Tidak memiliki Hipertensi\n1 -> Positif Memiliki Hipertensi\n\nHeart Disease:\n0 -> Tidak memiliki Penyakit Jantung\n1 -> Positif memiliki Penyakit Jantung\n\nSmoking History:\n0 -> Perokok untuk saat ini\n1 -> Pernah Merokok\n2 -> Mantan Perokok\n3 -> Tidak Pernah Merokok\n4 -> Tidak ada Info\n5 -> Bukan Perokok untuk saat ini\n"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>